{
  "name": "auafl",
  "version": "1.0.0",
  "description": "Another utility application for linux.",
  "main": "dist-electron/main.js",
  "scripts": {
    "build:client": "cd client && vite build",
    "build:server": "cd server && npm run build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:all": "npm run build:client && npm run build:server && npm run build:electron",
    "start:react:dev": "cd client && vite",
    "start:electron:dev": "NODE_ENV='development' electron --no-sandbox .",
    "start:electron:prod": "electron --no-sandbox .",
    "start:dev": "concurrently \"npm run start:react:dev\" \"npm run start:electron:dev\"",
    "start": "npm run build:all && npm run start:electron:prod",
      "package": "electron-builder build --publish never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "concurrently": "^7.0.0",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "tsx": "^4.19.3"
  },
  "build": {
    "productName": "AUAFL",
    "appId": "com.jl1172.auafl",
    "files": [
      "dist/**/*",
      "dist-client/**/*",
      "dist-server/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "packageCategory": "utils",
      "maintainer": "Jacob github: JL1172",
      "description": "Task Manager Application",
      "synopsis": "Monitor and manage system processes",
      "artifactName": "auafl-${version}.${ext}"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "vite": "^6.2.5"
  }
}
